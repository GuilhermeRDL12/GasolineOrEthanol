<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="5"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/descriptionGasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/paddingTextView"
        android:paddingBottom="@dimen/paddingTextView"
        android:text="@string/descriptionGasoline"
        android:textSize="@dimen/descriptionTextSize" />

    <TextView
        android:id="@+id/priceGasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:paddingTop="@dimen/paddingTextView"
        android:paddingBottom="@dimen/paddingTextView"
        android:textSize="@dimen/valueTextView" />

    <SeekBar
        android:id="@+id/priceGasolineSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:max="1000"
        android:layout_gravity="fill_horizontal"
        android:paddingBottom="@dimen/paddingSeekBar"
        android:paddingTop="@dimen/paddingSeekBar"/>

    <TextView
        android:id="@+id/descriptionEthanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/paddingTextView"
        android:paddingTop="@dimen/paddingTextView"
        android:text="@string/descriptionEthanol"
        android:textSize="@dimen/descriptionTextSize"/>

    <TextView
        android:id="@+id/priceEthanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:paddingTop="@dimen/paddingTextView"
        android:paddingBottom="@dimen/paddingTextView"
        android:textSize="@dimen/valueTextView" />

    <SeekBar
        android:id="@+id/priceEthanolSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:max="1000"
        android:layout_gravity="fill_horizontal"
        android:paddingBottom="@dimen/paddingSeekBar"
        android:paddingTop="@dimen/paddingSeekBar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/optionBetterTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:paddingBottom="@dimen/paddingTextView"
        android:paddingTop="@dimen/paddingTextView"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/betterOption">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/optionBetterInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/typeImageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/description"
        app:srcCompat="@drawable/start" />

</GridLayout>